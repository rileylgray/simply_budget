<% content_for :title, "Expense Categories" %>

<div class="container mt-5" style="max-width: 700px;">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Expense Categories</h1>
    <%= link_to "New Category", new_expense_category_path, class: "btn btn-success" %>
  </div>

  <div class="card shadow">
    <div class="card-body p-0">
      <% if @expense_categories.any? %>
        <table class="table table-hover align-middle mb-0">
          <thead class="table-light">
            <tr>
              <th>Name</th>
              <th>Description</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @expense_categories.each do |expense_category| %>
              <tr style="cursor: pointer;" onclick="window.location='<%= expense_category_path(expense_category) %>'">
                <td><%= expense_category.name %></td>
                <td><%= expense_category.description.presence || "-" %></td>
                <td class="text-end">
                  <%= button_to expense_category, method: :delete, data: { turbo_confirm: "Are you sure you want to delete this category?" }, class: "btn btn-sm btn-outline-danger", form: { style: "display:inline;" } do %>
                    <i class="bi bi-trash"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <div class="alert alert-info mb-0 text-center">
          No expense categories found. Start by adding your first category!
        </div>
      <% end %>
    </div>
  </div>
</div>