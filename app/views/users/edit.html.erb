<div class="container mt-5" style="max-width: 500px;">
  <div class="card shadow">
    <div class="card-body">
      <h2 class="card-title text-center mb-4">Edit Profile</h2>
      <% if @user.errors.any? %>
        <div class="alert alert-danger">
          <h5 class="alert-heading">Please fix the following errors:</h5>
          <ul class="mb-0">
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_with(model: @user, local: true) do |f| %>
        <div class="mb-3">
          <%= f.label :firstname, "First Name", class: "form-label" %>
          <%= f.text_field :firstname, class: "form-control", required: true %>
        </div>
        <div class="mb-3">
          <%= f.label :lastname, "Last Name", class: "form-label" %>
          <%= f.text_field :lastname, class: "form-control", required: true %>
        </div>
        <div class="mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, class: "form-control", required: true %>
        </div>
        <div class="d-grid mb-3">
          <%= f.submit "Update Profile", class: "btn btn-success" %>
        </div>
      <% end %>
      <div class="d-flex justify-content-between mt-4">
        <%= link_to "Show Profile", @user, class: "btn btn-outline-primary" %>
        <%= link_to "Home", root_path, class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>
</div>