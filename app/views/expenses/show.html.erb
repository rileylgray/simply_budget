<div class="container mt-5" style="max-width: 600px;">
  <div class="card shadow">
    <div class="card-body">
      <h2 class="card-title mb-4 text-center">Expense Details</h2>
      <ul class="list-group list-group-flush mb-4">
        <li class="list-group-item">
          <strong>Name:</strong> <%= @expense.name %>
        </li>
        <li class="list-group-item">
          <strong>Amount:</strong> <%= number_to_currency(@expense.amount) %>
        </li>
        <li class="list-group-item">
          <strong>Frequency:</strong> <span class="badge bg-info text-dark"><%= @expense.frequency.humanize %></span>
        </li>
        <li class="list-group-item">
          <strong>Date Spent:</strong> <%= @expense.spent_on.strftime("%b %d, %Y") if @expense.spent_on %>
        </li>
        <li class="list-group-item">
          <strong>End Date:</strong> <%= @expense.end_date ? @expense.end_date.strftime("%b %d, %Y") : "Ongoing" %>
        </li>
        <li class="list-group-item">
          <strong>Categories:</strong>
          <% if @expense.expense_categories.any? %>
            <ul class="list-inline mb-0">
              <% @expense.expense_categories.each do |category| %>
                <li class="list-inline-item">
                  <span class="badge bg-secondary"><%= category.name %></span>
                </li>
              <% end %>
            </ul>
          <% else %>
            <span class="text-muted">No categories assigned</span>
          <% end %>
        <li class="list-group-item">
          <strong>Notes:</strong> <%= @expense.notes.presence || "-" %>
        </li>
      </ul>
      <div class="d-flex justify-content-between">
        <%= link_to "Edit", edit_expense_path(@expense), class: "btn btn-outline-primary" %>
        <%= link_to "Back to Expenses", expenses_path, class: "btn btn-outline-secondary" %>
        <%= button_to "Delete", @expense, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger" %>
      </div>
    </div>
  </div>
</div>