<% content_for :title, "Edit Expense" %>

<div class="container mt-5" style="max-width: 600px;">
  <div class="card shadow">
    <div class="card-body">
      <h2 class="card-title mb-4 text-center">Edit Expense</h2>
      <%= render "form", expense: @expense %>
      <div class="text-center mt-3">
        <%= link_to "Show this Expense", @expense, class: "btn btn-outline-primary me-2" %>
        <%= link_to "Back to Expenses", expenses_path, class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>
</div>